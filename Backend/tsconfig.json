{
  "compilerOptions": {
    "target": "ES6",
    "module": "Commonjs",
    "outDir": "./dist",
  
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*", "src/app.ts", "server.ts"],
  "exclude": ["node_modules","dist"]
}
